<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/appwidget_bg"
        >
     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/piratebox_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleConnections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_info_connections"
            android:gravity="center"
            android:background="#aaff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/textConnections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_dev_info_default_summary"
            android:gravity="center"
            android:background="#80ff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/titleUploads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_info_uploads"
            android:gravity="center"
            android:background="#aaff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/textUploads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_dev_info_default_summary"
            android:gravity="center"
            android:background="#80ff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/titleShouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_info_shouts"
            android:gravity="center"
            android:background="#aaff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/textShouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_dev_info_default_summary"
            android:gravity="center"
            android:background="#80ff0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@android:drawable/stat_notify_sync" />
        
    </LinearLayout>
    </LinearLayout>

</LinearLayout>